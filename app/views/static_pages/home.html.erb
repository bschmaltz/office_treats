<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <nav>
        <ul class="nav nav-pills">
          <% if signed_in? %>
            <% if params[:pflag]==nil || params[:pflag].to_i==0 %>
              <li class="active"><%= link_to "New Posts", root_path(:pflag => 0) %></li>
            <% else %>
              <li><%= link_to "New Posts", root_path(:pflag => 0) %></li>
            <% end %>

            <% if params[:pflag].to_i==1 %>
              <li class="active"><%= link_to "Top Posts", root_path(:pflag => 1) %></li>
            <% else %>
              <li><%= link_to "Top Posts", root_path(:pflag => 1) %></li>
            <% end %>

            <% if params[:pflag].to_i==2 %>
              <li class="active"><%= link_to "Old Posts", root_path(:pflag => 2) %></li>
            <% else %>
              <li><%= link_to "Old Posts", root_path(:pflag => 2) %></li>
            <% end %>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Office Treats</h1>

    <h2>
      This is the home page for the
      <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>
      sample application.
    </h2>

    <%= link_to "Sign up now!", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %> 